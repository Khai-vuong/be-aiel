# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost
DOMAIN=localhost

# Database Configuration
# Replace with your actual database URL
# For PostgreSQL: postgresql://username:password@localhost:5432/database_name
# For MySQL: mysql://username:password@localhost:3306/database_name
# For SQLite: file:./dev.db
DATABASE_LOCAL_URL="postgresql://username:password@localhost:5432/elearning_db"

# JWT Configuration (for authentication)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# API Configuration

# like localhost:3000/api/mock
# API_PREFIX=api
API_VERSION=v1

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis Configuration (optional, for caching/sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=debug

# AI Chatbot Configuration (for your e-learning platform)
OPENAI_API_KEY=your-openai-api-key
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_MAX_COMPLETION_TOKENS=1024
CHATBOT_MODEL=gpt-3.5-turbo
CHATBOT_MAX_TOKENS=1000
GROQ_API_KEY=your-groq-api-key
GROQ_CHAT_MODEL=llama-3.3-70b-versatile
GROQ_MAX_COMPLETION_TOKENS=1024
OUTER_API_PROVIDER_ORDER=groq,openai,anthropic,local
OUTER_API_COOLDOWN_MS=60000
